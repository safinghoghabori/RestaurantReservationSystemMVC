@using RestaurantReservationSystem.Mvc.Models;
@model Table
@{
  ViewData["Title"] = "Add table";
}

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f0f8ff;
    color: #333;
  }

  form {
    max-width: 600px;
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  fieldset {
    border: none;
  }

  label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #555;
  }

  input[type="text"],
  input[type="number"],
  select {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
  }

  button {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
  }

  button:hover {
    background-color: #45a049;
  }

  div {
    margin-bottom: 15px;
  }
</style>

<form asp-action="Create" method="post">
  <fieldset>
    <div>
      <label asp-for="TableId" class="form-label">Table id</label>
      <input asp-for="TableId" type="number" class="form-control" aria-describedby="Id">
      <span asp-validation-for="TableId" class="text-danger"></span>
    </div>
    <div>
      <label asp-for="Capacity" class="form-label">Capacity</label>
      <input asp-for="Capacity" type="number" class="form-control">
      <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div>
      <label asp-for="Cost" class="form-label">Cost</label>
      <input asp-for="Cost" type="number" class="form-control">
      <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div>
      <label class="form-label">Is table reserved?</label>
      <div class="form-check">
        <input asp-for="IsReserved" class="form-check-input" type="radio" value=true name="IsReserved">
        <label asp-for="IsReserved" class="form-check-label">Yes</label>
      </div>
      <div class="form-check">
        <input asp-for="IsReserved" class="form-check-input" type="radio" value=false name="IsReserved" checked>
        <label asp-for="IsReserved" class="form-check-label">No</label>
      </div>
    </div>
    <div>
      <button type="submit">Add</button>
      <button type="button" onclick="goHome()">Go Home</button>
    </div>
  </fieldset>
</form>

<script>
  function goHome() {
    window.location.href = '/Home/Home';
  }
</script>