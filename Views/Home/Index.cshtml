@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            margin: 0;
            color: #fff;
        }

        #container1 {
            background-color: rgba(34, 29, 29, 0.6);
            padding: 2rem;
            border-radius: 8px;
            max-width: 600px;
            margin: 0 auto;
            margin-top: 100px;
        }

        .text-center {
            height: 75vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .login-div {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        h1 {
            margin: 0 0 2rem 0;
            font-size: 2.5rem;
        }

        .btn-lg {
            width: 150px;
        }

        .main-heading {
            color:white;
            @* background-color: rgb(0,0,0.8); *@
            padding: 0.5rem 1rem;
            border-radius: 8px;
        }
    </style>
</head>

<body>
    <div class="text-center" id="container1">
        <h1 class="main-heading">Welcome to 2SAV Grand</h1>

        <div class="login-div">
            <button type="button" class="btn btn-primary btn-lg" onclick="handleLoginClick()">Login</button>
            <button type="button" class="btn btn-secondary btn-lg mt-4">Sign Up</button>
        </div>
    </div>

    <script>
        const handleLoginClick = () => {
            window.location.href = '@Url.Action("Login", "Account")';
        }
    </script>
</body>

</html>
